<odoo>
    <data>
        <!-- Vista Árbol de Modelo nominal relationship mindef contributions -->

        <record model="ir.ui.view" id="nominal_relationship_mindef_loan_tree_id">
            <field name="name">nominal.relationship.mindef.loan.tree</field>
            <field name="model">nominal.relationship.mindef.loan</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <header>
                        <button name="homologate_data_mindef_loan" string="Homologar" type="object" class="oe_highlight"/>
                    </header>
                    <field name="name" optional="hide"/>
                    <field name="management"/>
                    <field name="month"/>
                    <field name="supporting_document"/>
                    <field name="eit_codorg"/>
                    <field name="organism"/>
                    <field name="eit_codrep"/>
                    <field name="distribution"/>
                    <field name="group"/>
                    <field name="group_description"/>
                    <field name="identification"/>
                    <field name="creditor"/>
                    <field name="code_concept"/>
                    <field name="code_creditor"/>
                    <field name="bank_account"/>
                    <field name="personal_code"/>
                    <field name="eit_item"/>
                    <field name="ci"/>
                    <field name="degree"/>
                    <field name="mension"/>
                    <field name="name_complete"/>
                    <field name="amount_bs"/>
                    <field name="tot2"/>
                    <field name="comision"/>
<!--                    <field name="amount_usd"/>-->
                    <field name="date_register" optional="hide"/>
                    <field name="date_process" optional="hide"/>
                    <field name="period_process"/>
                    <field name="loan_regular"/>
                    <field name="loan_emergency"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Vista Formulario nominal.relationship.mindef.contributions  -->

        <record model="ir.ui.view" id="nominal_relationship_mindef_contributions_form_id">
            <field name="name">nominal.relationship.mindef.loan.form</field>
            <field name="model">nominal.relationship.mindef.loan</field>
            <field name="arch" type="xml">
                <form string="Archivador" class="oe_left oe_edit_only oe_form_required">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" string="Nombre"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="organism"/>
                                <field name="eit_item"/>
                                <field name="ci"/>
                                <field name="degree"/>
                                <field name="mension"/>
                                <field name="name_complete"/>
                                <field name="amount_bs"/>
                                <field name="amount_usd"/>
                                <field name="date_register"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Accion para visualizar nominal.relationship.mindef.contributions -->

        <record id="action_nominal_relationship_mindef_loan" model="ir.actions.act_window">
            <field name="name">Archivador</field>
            <field name="res_model">nominal.relationship.mindef.loan</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>