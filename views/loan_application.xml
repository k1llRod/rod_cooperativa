<odoo>
    <data>
        <!-- Vista Árbol de Modelo loan application -->

        <record model="ir.ui.view" id="loan_application_tree_id">
            <field name="name">loan.application.tree</field>
            <field name="model">loan.application</field>
            <field name="arch" type="xml">
                <tree>
                    <header>
                        <button name="import_loan" string="Conciliar" class="oe_highlight" type="object" groups="rod_cooperativa.group_rod_cooperativa_administrator"/>
                        <button name="massive_approve_loan" string="Aprobacion masiva" type="object" groups="rod_cooperativa.group_rod_cooperativa_administrator"/>
                    </header>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="type_loan"/>
                    <field name="with_guarantor"/>
                    <field name="months_quantity"/>
                    <field name="amount_loan_dollars"/>
                    <field name="amount_loan"/>
                    <field name="date_application"/>
                    <field name="date_approval"/>
                    <field name="letter_of_request" optional="hidden"/>
                    <field name="contact_request" optional="hidden"/>
                    <field name="last_copy_paid_slip" optional="hidden"/>
                    <field name="interest_month_surpluy" invisible="1"/>
<!--                    <field name="photocopy_military_ci"/>-->
<!--                    <field name="type_of_loan"/>-->
                    <field name="guarantor_one" optional="show"/>
                    <field name="guarantor_two" optional="show"/>
                    <field name="code_loan" optional="hidden"/>
                    <field name="amount_loan" widget="monetary"/>
                    <field name="missing_payments"/>
                    <field name="state" decoration-info="state == 'draft'" decoration-success="state == 'progress'" widget="badge"/>
                </tree>
            </field>
        </record>

        <!-- Vista Formulario loan.application  -->

        <record model="ir.ui.view" id="loan_application_form_id">
            <field name="name">loan.application.form</field>
            <field name="model">loan.application</field>
            <field name="arch" type="xml">
                <form string="Solicitud de presupuesto" class="oe_left oe_edit_only oe_form_required">
                    <header>
                        <button name="verification_pass" string="Verificación" class="oe_highlight" type="object" attrs="{'invisible':[('state','!=','init')]}" groups="rod_cooperativa.group_rod_cooperativa_operator"/>
                        <button name="approval_state" string="Aprobar prestamo" class="oe_highlight" type="object" attrs="{'invisible': [('state','!=','verificate')]}" groups="rod_cooperativa.group_rod_cooperativa_administrator"/>
                        <button name="refinance" string="Refinanciar" type="object" attrs="{'invisible': [('state','!=','progress')]}" groups="rod_cooperativa.group_rod_cooperativa_administrator,rod_cooperativa.group_rod_cooperativa_operator"/>
                        <button name="return_application" string="Devolver" type="object" attrs="{'invisible': [('state','!=','verificate')]}"/>
                        <button name="return_draft" string="Borrador" type="object" attrs="{'invisible': [('state','!=','progress')]}" groups="rod_cooperativa.group_rod_cooperativa_administrator"/>
                        <button name="reset_payroll" string="Reset" type="object" groups="rod_cooperativa.group_rod_cooperativa_administrator,rod_cooperativa.group_rod_cooperativa_operator"/>
                        <button name="return_approval" string="Retornar aprobacion" type="object" groups="rod_cooperativa.group_rod_cooperativa_administrator,rod_cooperativa.group_rod_cooperativa_operator"/>
                        <button name="approve_loan" string="Validar" type="object" class="oe_highlight" attrs="{'invisible': [('state','!=','approval')]}" groups="rod_cooperativa.group_rod_cooperativa_administrator"/>
                        <field name="state" widget="statusbar" statusbar_visible="init,verificate,approval,progress,done"/>
                    </header>
                    <sheet>

                        <div class="oe_button_box" name="button_box">
                            <button name="button_value_dolar" class="oe_stat_button" type="object" icon="fa-usd">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field string=" " name="value_partner_total_contribution" widget="statinfo"/>
                                    </span>
                                    <span class="o_stat_text">
                                        Total Aportes
                                    </span>
                                </div>
                            </button>
                            <button name="button_value_dolar" class="oe_stat_button" type="object" icon="fa-usd">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field string=" " name="value_dolar" widget="statinfo"/>
                                    </span>
                                    <span class="o_stat_text">
                                        Dolar
                                    </span>
                                </div>
                            </button>

                        </div>
                        <widget name="web_ribbon" text="Refinanciado" attrs="{'invisible': [('state', '!=' ,'refinanced')]}"/>
<!--                        <widget name="web_ribbon" title="Paid" attrs="{'invisible': ['|', ('payment_state', '!=', 'paid'), ('move_type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))]}"/>-->
<!--                        <widget name="web_ribbon" title="In Payment" attrs="{'invisible': ['|', ('payment_state', '!=', 'in_payment'), ('move_type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))]}"/>-->
<!--                        <widget name="web_ribbon" title="Partial" attrs="{'invisible': ['|', ('payment_state', '!=', 'partial'), ('move_type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))]}"/>-->
<!--                        <widget name="web_ribbon" title="Reversed" bg_color="bg-danger" attrs="{'invisible': [('payment_state', '!=', 'reversed')]}"/>-->
                        <div class="alert alert-warning text-center o_form_header" role="alert"
                             >
                            <a class="close" data-dismiss="alert" href="#">x</a>
                            <div>
                                <strong>Planilla de pagos de prestamos</strong>
                            </div>
                            <div attrs="{'invisible': [('missing_payments','&lt;','0')]}">Pagos pendientes
                                <field name="missing_payments" required="0" readonly="1"/>
                            </div>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" string="Nombre" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group string="General">
                                <!--                                <field name="type_loan" attrs="{'readonly': ['|',('state','=','progress'),('state','=','done'),('state','=','init')]}"/>-->
                                <field name="type_loan" readonly="1"/>
                                <field name="with_guarantor" attrs="{'readonly': ['|',('state','=','progress'),('state','=','done')],
                                                                    'invisible': [('type_loan','=','emergency')]}"/>
                                <field name="partner_id" readonly="1"/>
                                <field name="partner_status_especific" />
                                <field name="refinance_loan_id" readonly="1" attrs="{'invisible': [('state','!=','refinanced')]}"/>
                                <field name="amount_devolution" readonly="1" attrs="{'invisible': [('state','!=','refinanced')]}"/>
                                <field name="interest_day_rest" attrs="{'invisible': [('state','!=','refinanced')]}"/>
                                <field name="category_partner" attrs="{'invisible':[('partner_id', '=', False)]}"/>
                                <field name="code_contact"/>
                                <field name="ci_partner" attrs="{'invisible':[('partner_id', '=', False)]}"/>


                                <!--                                <field name="category_loan"/>-->
                                <field name="guarantor_one" required="" domain="[('id','!=',partner_id),('guarantor','=',True)]"
                                       attrs="{'invisible':['|','|',('type_loan', '!=', 'regular'),('with_guarantor','=','no_loan_guarantor'),('with_guarantor','=','mortgage')],
                                                                            'readonly': ['|',('state','=','progress'),('state','=','done')],
                                                                            'required': [('with_guarantor','=','loan_guarantor')]}"
                                        />
                            </group>
                            <group string="Respaldos">
                                <field name="letter_of_request"
                                       attrs="{'readonly': ['|',('state','=','progress'),('state','=','done')]}"/>
                                <field name="contact_request"
                                       attrs="{'readonly': ['|',('state','=','progress'),('state','=','done')]}"/>
                                <field name="last_copy_paid_slip"
                                       attrs="{'readonly': ['|',('state','=','progress'),('state','=','done')]}"/>
                                <field name="signature_recognition" attrs="{'readonly': ['|',('state','=','progress'),('state','=','done')],
                                                                    'invisible':[('with_guarantor','=','no_loan_guarantor')]}"/>
                                <field name="contract"
                                       attrs="{'readonly': ['|',('state','=','progress'),('state','=','done')]}"/>
                                <field name="ci_photocopy"
                                       attrs="{'readonly': ['|',('state','=','progress'),('state','=','done')]}"/>
                                <field name="photocopy_military_ci"
                                       attrs="{'readonly': ['|',('state','=','progress'),('state','=','done')]}"/>
                            </group>

                        </group>
                        <group style="margin-top:0px;">
                            <group>
                                <field name="code_garantor_one"
                                       attrs="{'invisible':['|','|',('type_loan', '!=', 'regular'),('with_guarantor','=','no_loan_guarantor'),('with_guarantor','=','mortgage')]}"/>
                                <field name="guarantor_two" domain="[('id','!=',partner_id),('guarantor','=',True)]"
                                       attrs="{'invisible':['|','|',('type_loan', '!=', 'regular'),('with_guarantor','=','no_loan_guarantor'),('with_guarantor','=','mortgage')],
                                                                                                                'readonly': ['|',('state','=','progress'),('state','=','done')]}" />
                                <field name="currency_id" invisible="1" groups="base.group_multi_currency"/>
                                <field name="currency_id_dollar" invisible="1" groups="base.group_multi_currency"/>
                                <field name="months_quantity"
                                       attrs="{'readonly': ['|',('state','=','progress'),('state','=','done')],
                                                'required': True}"/>
                                <field name="amount_loan_dollars" widget="monetary"
                                       options="{'currency_field': 'currency_id_dollar'}"
                                       attrs="{'readonly': ['|',('state','=','progress'),('state','=','done')],
                                                'required': True}"/>
                                <field name="amount_loan" widget="monetary"/>
                                <field name="date_application"
                                       attrs="{'readonly': ['|',('state','=','progress'),('state','=','done')]}"/>
                                <!--                                <field name="date_approval" attrs="{'readonly': [('state','!=','init')],-->
                                <!--                                                                    'invisible': [('state','=','init')]}"/>-->
                                <field name="date_approval" attrs="{'required': [('state','=','approval')]}"/>
                                <field name="monthly_interest" readonly="1" attrs="{'invisible':[('with_guarantor','=','mortgage')]}"/>
                                <field name="monthly_interest_mortgage" readonly="1" attrs="{'invisible':[('with_guarantor','!=','mortgage')]}"/>
                                <field name="contingency_fund" readonly="1" attrs="{'invisible':[('with_guarantor','=','mortgage')]}"/>
                                <field name="mortgage_loan" readonly="1" attrs="{'invisible':[('with_guarantor','!=','mortgage')]}"/>
                                <field name="index_loan" readonly="1" widget="monetary"
                                       options="{'currency_field': 'currency_id_dollar'}"/>
                                <!--                                <field name="index_loan_bs" readonly="1" widget="monetary" />-->
                                <field name="amount_min_def" readonly="1"/>
                                <field name="fixed_fee" readonly="1" widget="monetary"
                                       options="{'currency_field': 'currency_id_dollar'}"/>
                                <field name="fixed_fee_bs" readonly="1" widget="monetary"/>
                                <field name="pay_slip_balance" readonly="1"/>
                                <field name="surplus_days"/>
                                <field name="interest_month_surpluy"/>
                                <field name="total_interest_month_surpluy"/>
                                <field name="reason_loan"/>
                                <field name="turn_name"/>
                                <field name="account_deposit"/>
                                <field name="special_case"/>
                            </group>
                            <group string="Valores">
                                <field name="balance_capital" widget="monetary" options="{'currency_field': 'currency_id_dollar'}"/>
                                <field name="balance_capital_auxiliar" />
                                <field name="balance_total_interest_month" />
                                <field name="balance_total_interest_month_auxiliar"/>
                            </group>
                            <group string="Monto maximo de prestamo">
                                <field name="balance_capital" widget="monetary" options="{'currency_field': 'currency_id_dollar'}"/>
                            </group>
                            <group string="Informe faltantes">
                                <field name="total_payments_confirm"/>
                                <field name="missing_payments"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Pagos">
                                <field name="loan_payment_ids" >
                                    <tree editable="bottom" decoration-info="state in ('transfer', 'ministry_defense', 'debt_settlement_mindef', 'debt_settlement_deposit')">
                                        <field name="name"/>
                                        <field name="date" />
                                        <field name="period" />
                                        <field name="capital_initial" />
                                        <field name="capital_index_initial" />
                                        <field name="mount"/>
                                        <field name="interest_base" attrs="{'column_invisible': [('parent.with_guarantor','=','mortgage')]}" sum="Total"/>
                                        <field name="res_social" attrs="{'column_invisible': [('parent.with_guarantor','=','mortgage')]}"/>
                                        <field name="interest_mortgage" attrs="{'column_invisible': [('parent.with_guarantor','!=','mortgage')]}"/>
                                        <field name="interest_base_mortgage" attrs="{'column_invisible': [('parent.with_guarantor','!=','mortgage')]}"/>
                                        <field name="balance_capital"/>
                                        <field name="interest_month_surpluy" sum="Total"/>
                                        <field name="percentage_amount_min_def"/>
                                        <field name="commission_min_def"/>
                                        <field name="amount_total"/>
                                        <field name="amount_total_bs"/>
                                        <field name="state" decoration-info="state == 'init' or state == 'in_queue'"
                                               decoration-success="state == 'progress' or state == 'done'"
                                               widget="badge"/>
                                        <button name="open_loan_payment" type="object" class="oe_highlight"
                                                icon="fa-eye"/>

                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="loan_application_view_search_cooperativa" model="ir.ui.view">
            <field name="name">loan.application.view.search.cooperativa</field>
            <field name="model">loan.application</field>
            <!--            <field name="inherit_id" ref="base.view_res_partner_filter"/>-->
            <field name="arch" type="xml">
                <search string="Buscar asociados">
                    <field name="code_contact"/>
                    <!--                    <field name="vat" string="C.I."/>-->
                    <field name="partner_id"/>
                    <!--                    <filter name="quantity_capital_initial"-->
                    <!--                            string="Capital inicial"-->
                    <!--                            domain="[('capital_initial', '!=', 0)]"/>-->
                    <separator />
                    <!--                    <filter name="partner_active_service"-->
                    <!--                            string="Asociados servicio activo"-->
                    <!--                            domain="[('partner_status_especific', '=', 'active_service')]"/>-->
                    <!--                    <filter name="partner_passive_reserve_a"-->
                    <!--                            string="Asociados Pasivo categoria 'A'"-->
                    <!--                            domain="[('partner_status_especific','=','passive_reserve_a')]"/>-->
                    <!--                    <filter name="partner_passive_reserve_b"-->
                    <!--                            string="Asociados Pasivo categoria 'B'"-->
                    <!--                            domain="[('partner_status_especific','=','passive_reserve_b')]"/>-->
                    <!--                    <group expand="0" string="Group By">-->
                    <!--                        <filter string="Tipo de asociado"-->
                    <!--                                name="group_partner_status"-->
                    <!--                                context="{'group_by': 'partner_status_especific'}"/>-->

                    <!--                    </group>-->
                </search>
            </field>
        </record>

        <record id="action_approve_loan" model="ir.actions.server">
            <field name="name">Massive approve loan</field>
            <field name="model_id" ref="model_loan_application"/>
            <field name="binding_model_id" ref="model_loan_application"/>
            <field name="state">code</field>
            <field name="code">action = records.massive_approve_loan()</field>
        </record>
        <record id="action_verification_pass" model="ir.actions.server">
            <field name="name">Massive verification pass</field>
            <field name="model_id" ref="model_loan_application"/>
            <field name="binding_model_id" ref="model_loan_application"/>
            <field name="state">code</field>
            <field name="code">action = records.massive_verification_pass()</field>
        </record>
        <record id="action_generate_report_xlsx" model="ir.actions.server">
            <field name="name">Generar reporte Excel</field>
            <field name="model_id" ref="model_loan_application"/>
            <field name="binding_model_id" ref="model_loan_application"/>
            <field name="state">code</field>
            <field name="code">action = records.action_wizard_report_xlsx()</field>
        </record>

        <!-- Accion para visualizar loan.application -->

        <record id="action_loan_application" model="ir.actions.act_window">
            <field name="name">Solicitud de préstamos</field>
            <field name="res_model">loan.application</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
