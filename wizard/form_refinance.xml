<odoo>
    <data>
        <record model="ir.ui.view" id="form_refinance_id">
            <field name="name">form.refinance.form</field>
            <field name="model">form.refinance</field>
            <field name="arch" type="xml">
                <form string="Formulario de refinanciamiento">
                    <group>
                        <group string="Datos para refinanciamiento">
                            <field name="name" invisible="1"/>
                            <field name="data_loan_id" readonly="1"/>
                            <field name="capital_initial" readonly="1"/>
                            <field name="quantity_month_initial" readonly="1"/>
                            <field name="capital_rest" readonly="1"/>
                            <field name="interest_days_rest" readonly="1"/>
                            <field name="amount_refinance" />
                            <field name="month_refinance" />
                            <field name="amount_delivered"/>
                            <field name="date_refinance"/>
                        </group>
                        <group string="Calculo aproximado">

                        </group>
                    </group>
                    <footer>
                        <button name="init_refinance" string="Confirmar" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

