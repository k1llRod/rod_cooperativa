<odoo>
    <data>
        <!-- Vista del wizard -->
        <record id="payment_post_mortem_id" model="ir.ui.view">
            <field name="name">payment.post.mortem.form</field>
            <field name="model">payment.post.mortem</field>
            <field name="arch" type="xml">
                <form string="Your Wizard">
                    <group>
                        <group string="Datos de los beneficiarios">
                            <field name="partner_id" readonly="1"/>
                            <field name="family_ids" widget="many2many_tags" readonly="1"/>
                            <field name="payment_date"/>
                            <field name="type_payment"/>
                            <field name="return_amount"/>
                        </group>
                        <group string="Datos base">
                            <field name="base_amount" readonly="1"/>
                            <field name="base_longevity_amount" readonly="1"/>
                            <field name="global_amount" readonly="1"/>
                        </group>
                    </group>
                    <footer>
                        <button name="register_payment" string="Confirmar" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
